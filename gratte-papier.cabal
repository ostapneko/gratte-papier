name:                gratte-papier
version:             0.1.0.0
synopsis:            Command-line tool to facilitate document archive via OCR.
license:             MIT
license-file:        LICENSE
author:              Thomas Franquelin
build-type:          Simple
cabal-version:       >=1.8

executable gratte-papier
  ghc-options:       -Wall -threaded
  main-is:           Main.hs
  hs-source-dirs:    src/executable
                     src/library
  build-depends:     base
                     , HTTP
                     , MissingH
                     , aeson
                     , attoparsec
                     , bytestring
                     , directory
                     , either
                     , filepath
                     , hslogger
                     , mtl
                     , network
                     , old-time
                     , process
                     , split
                     , template-haskell
                     , temporary
                     , text
                     , unix
                     , vector

executable gratte-migrate
  ghc-options:       -Wall -threaded
  main-is:           Migrate.hs
  hs-source-dirs:    src/executable
                     src/library
  build-depends:     base
                     , HTTP
                     , MissingH
                     , aeson
                     , attoparsec
                     , bytestring
                     , directory
                     , either
                     , filepath
                     , hslogger
                     , mtl
                     , network
                     , old-time
                     , process
                     , split
                     , system-fileio
                     , system-filepath
                     , template-haskell
                     , temporary
                     , text
                     , unix
                     , vector

test-suite integration
  type:              exitcode-stdio-1.0
  main-is:           Suite.hs
  hs-source-dirs:    tests/integration
                     , src/library
                     , tests/

  build-depends:     base
                     , HTTP
                     , HUnit
                     , MissingH
                     , aeson
                     , attoparsec
                     , bytestring
                     , directory
                     , either
                     , filepath
                     , hslogger
                     , hspec
                     , mtl
                     , network
                     , old-time
                     , process
                     , split
                     , template-haskell
                     , temporary
                     , text
                     , unix
                     , vector
